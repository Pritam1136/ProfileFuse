---
interface Props {
  name?: string;
  slug: string;
}

const { name, slug } = Astro.props as Props;
---

<div class="card">
  <img src="" alt="" />
  <a href={`/${slug}`}>
    <div class="name">{name}</div>
  </a>
</div>

<style>
  .card {
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
    margin-bottom: 20px;
    height: 100px;
  }
  .name {
    display: flex;
    justify-content: center;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    align-items: center;
    padding-top: 70px;
    font-size: 18px;
    font-weight: 600;
    color: blueviolet;
  }
  a {
    text-decoration: none;
  }
</style>
