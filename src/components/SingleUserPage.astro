---
interface Props {
  frontmatter: {
    name: string;
    slug: string;
    content: string;
    img: string;
    links: [{ platform: string; link: string }];
  };
}
const { frontmatter } = Astro.props as Props;
---

<div class="single-user-page">
  <div class="image">
    <img
      src={frontmatter.img}
      alt={frontmatter.name?.split(" ")[0] + " " + frontmatter.slug}
    />
  </div>
  <div class="name">{frontmatter.name}</div>
  <div class="unique-link">
    <p class="your-link">
      {`https://profilefuse.netlify.app/${frontmatter.slug}`}
    </p>
    <button class="copy"> copy</button>
  </div>
  {
    frontmatter.links &&
      frontmatter.links.map((link) => (
        <a class="social-links" href={link.link}>
          Follow me on {link.platform}
        </a>
      ))
  }
  <p class="about">About me</p>
  <div class="line"></div>
  <p class="content">{frontmatter.content}</p>
</div>

<style>
  .single-user-page {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  .image {
    padding-top: 45px;
  }
  .image > img {
    height: 250px;
    width: 250px;
    border-radius: 50%;
  }
  .name {
    padding-top: 20px;
    font-size: 35px;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
      sans-serif;
    font-weight: 600;
    color: blueviolet;
  }
  .unique-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
  .copy {
    border-radius: 10px;
    height: 30px;
    width: 44px;
    border: 1px solid gray;
  }
  .copy:hover {
    background-color: gray;
  }
  .social-links {
    text-decoration: none;
    color: white;
    background-color: blueviolet;
    margin: 10px 0;
    padding: 10px;
    border-radius: 15px;
  }
  .your-link {
    background-color: rgb(162, 162, 162);
    padding: 10px 5px;
    border-radius: 10px;
  }
  .content {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80%;
  }
  .about {
    font-size: 35px;
    font-family: cursive;
    color: blueviolet;
  }
  .line {
    margin-top: -10px;
    border: 1px solid blueviolet;
    width: 80%;
  }

  @media (max-width: 520px) {
    .image > img {
      height: 150px;
      width: 150px;
      border-radius: 50%;
    }
    .name {
      font-size: 25px;
    }
    .unique-link {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding-bottom: 10px;
    }
  }
</style>
