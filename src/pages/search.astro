---
import SearchBar from "../components/SearchBar.astro";
import Layout from "../layout/Layout.astro";
---

<Layout>
  <SearchBar />
  <p class="content">Here is Your search results.</p>
  <div class="hidden">
    <section class="features">
      <div class="container">
        <div class="card">
          <div class="image">
            <img src="" alt="Hello World" class="img-src" />
          </div>
          <a class="slug" href="">
            <div class="name"></div>
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .hidden {
    display: none;
  }
  .card {
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
    margin-bottom: 20px;
    height: 100px;
  }
  .name {
    display: flex;
    justify-content: center;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    align-items: center;
    padding-top: 30px;
    font-size: 18px;
    font-weight: 600;
    color: blueviolet;
  }
  a {
    text-decoration: none;
  }

  .card:hover {
    box-shadow: 0 0 10px blueviolet;
  }

  .image {
    display: flex;
    justify-content: center;
  }
  .image > img {
    height: 55px;
    width: 55px;
    border-radius: 50%;
  }
  .features .container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 20px;
    padding: 0 20px;
    margin: 30px auto;
  }
  @media (max-width: 1010px) {
    .features .container {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  @media (max-width: 770px) {
    .features .container {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 520px) {
    .features .container {
      grid-template-columns: 1fr;
    }
  }
  .content {
    font-size: 34px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 15px 5px;
    color: blueviolet;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 700;
  }
  @media (max-width: 400px) {
    .content {
      font-size: 26px;
    }
  }
</style>

<script>
  import "../js/getParams.js";
</script>
